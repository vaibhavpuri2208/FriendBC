<p>
  <%= image_tag "https://graph.facebook.com/#{@post.from_id}/picture" %>
  <%= @post.from_name %>
</p>

<p>
  <%= @post.message %>
</p>

<p>
  <%= time_ago_in_words @post.created_time %> ago.
</p>

<p>
  <%= @post.likes %> likes.
</p>

<p>
  <iframe width="560" height="315" src="http://www.youtube.com/embed/<%= @post.link.split('=').last %>" frameborder="0" allowfullscreen></iframe>
</p>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <p>
        <%= image_tag "https://graph.facebook.com/#{comment.from_id}/picture" %>
        <%= comment.from_name %>
      </p>
      <p>
        <%= comment.message %>
      </p>
      <p>
        <%= time_ago_in_words comment.created_time %> ago.
      </p>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
